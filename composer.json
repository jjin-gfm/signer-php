    },
    "require": {
        "php": ">=5.4.0",
        "ext-mcrypt": "*",
        "skyzyx/signer": "^1.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "*@dev",
        "phpunit/phpcov": "~2.0",
        "phpunit/phpunit": "~4.3",
        "satooshi/php-coveralls": "*@dev"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-4": {
            "WePay\\Signer\\": "src/Signer/",
            "WePay\\Tests\\Signer\\": "tests/Signer/"
        }
    }
